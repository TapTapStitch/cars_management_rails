<p style="color: green"><%= notice %></p>

<h3>Cars</h3>
<%= "There are " + @cars.length.to_s + " cars found." %>
<p><%= link_to "Back to Home page", root_path %></p>
<p><%= link_to "Search", cars_search_path %></p>

<div>
  <p><%= link_to "Sort by Date Added (ascending)", cars_path(sort: "date_added_asc", make: params[:make], model: params[:model], year_from: params[:year_from], year_to: params[:year_to], price_from: params[:price_from], price_to: params[:price_to], odometer_from: params[:odometer_from], odometer_to: params[:odometer_to]) %></p>
  <p><%= link_to "Sort by Date Added (descending)", cars_path(sort: "date_added_desc", make: params[:make], model: params[:model], year_from: params[:year_from], year_to: params[:year_to], price_from: params[:price_from], price_to: params[:price_to], odometer_from: params[:odometer_from], odometer_to: params[:odometer_to]) %></p>
  <p><%= link_to "Sort by Price (ascending)", cars_path(sort: "price_asc", make: params[:make], model: params[:model], year_from: params[:year_from], year_to: params[:year_to], price_from: params[:price_from], price_to: params[:price_to], odometer_from: params[:odometer_from], odometer_to: params[:odometer_to]) %></p>
  <p><%= link_to "Sort by Price (descending)", cars_path(sort: "price_desc", make: params[:make], model: params[:model], year_from: params[:year_from], year_to: params[:year_to], price_from: params[:price_from], price_to: params[:price_to], odometer_from: params[:odometer_from], odometer_to: params[:odometer_to]) %></p>
</div>
<div id="cars">
  <% @cars.each do |car| %>
    <%= render car %>
    <p>
      <%= link_to "Show this car", car %>
    </p>
  <% end %>
</div>
